### ====================================
### USERS - Obtener todos los usuarios
### ====================================
GET http://localhost:3000/users

### ====================================
### USERS - Crear un nuevo usuario
### ====================================
POST http://localhost:3000/users
Content-Type: application/json

{
  "nickName": "camiinez"
}

### ====================================
### USERS - Obtener un usuario por nickName
### ====================================
GET http://localhost:3000/users/camiinez

### ====================================
### POSTS - Obtener todos los posts
### ====================================
GET http://localhost:3000/posts

### ====================================
### POSTS - Crear un nuevo post
### ====================================
POST http://localhost:3000/posts
Content-Type: application/json

{
  "nickName": "camiinez",
  "description": "post con urls",
  "imageUrls": ["https://picsum.photos/800/600?random=17","https://picsum.photos/800/600?random=18"],
  "tags": ["nodejs","java"]
}

### ====================================
### POSTS - Obtener un post por ID
### ====================================
GET http://localhost:3000/posts/6

### ====================================
### POSTS - Actualizar un post
### ====================================
PUT http://localhost:3000/posts/6
Content-Type: application/json

{
  "description": "Nueva descripción del post actualizado"
}

### ====================================
### POSTS - Eliminar un post
### ====================================
DELETE http://localhost:3000/posts/7

### ====================================
### POSTS - Añadir comentario a un post
### ====================================
POST http://localhost:3000/posts/6/add-comment
Content-Type: application/json

{
  "body": "commentario creado por mi 1",
  "nickName": "bob_builder"
}

### ====================================
### FOLLOWERS - Seguir a un usuario
### ====================================
POST http://localhost:3000/followers
Content-Type: application/json

{
  "follower_nickname": "bob_builder",
  "followed_nickname": "camiinez"
}

### ====================================
### FOLLOWERS - Obtener seguidores de un usuario
### ====================================
GET http://localhost:3000/followers/camiinez

### ====================================
### FOLLOWERS - Obtener usuarios que sigue un usuario
### ====================================
GET http://localhost:3000/followers/following/bob_builder

### ====================================
### FOLLOWERS - Dejar de seguir a un usuario
### ====================================
DELETE http://localhost:3000/followers
Content-Type: application/json

{
  "follower_nickname": "hugoperez",
  "followed_nickname": "danieljimenez"
}

